<div class="small-banner">
  <div class="small-banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
        <h2>Ingredients</h2>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li> <%= dose.ingredient.name %> : <%= dose.description %> <%= link_to "remove", dose_path(dose), method: :delete %> </li>
          <% end %>
        </ul>
    </div>
    <div class="col-md-6">
      <h2>Add an ingredient</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, label: false, class:'select2' %>
        <%= f.input :description, label: false, placeholder: "Enter a dose"  %>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete  %>
      <%= link_to "Go back to cocktails", cocktails_path %>
    </div>
  </div>
</div>


